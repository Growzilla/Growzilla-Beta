# Growzilla Beta - Environment Configuration
# Copy this file to .env and fill in your values

# Shopify App Credentials (from Shopify Partners Dashboard)
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# Shopify App Scopes (should match shopify.app.toml)
SCOPES=read_products,read_orders,read_customers,read_inventory,read_discounts,read_analytics

# Shopify App URL (set automatically during dev, update for production)
SHOPIFY_APP_URL=https://your-app.onrender.com

# Backend API URL (EcomDash FastAPI Backend)
# Local development:
# BACKEND_API_URL=http://localhost:8000
# Production (after Render deployment):
BACKEND_API_URL=https://ecomdash-api.onrender.com

# Optional: Custom shop domain for development
# SHOP_CUSTOM_DOMAIN=your-dev-store.myshopify.com

# Database URL for Prisma (session storage)
# For local: Use SQLite
DATABASE_URL="file:./dev.db"
# For production: Use PostgreSQL
# DATABASE_URL="postgresql://user:pass@host:5432/dbname"
